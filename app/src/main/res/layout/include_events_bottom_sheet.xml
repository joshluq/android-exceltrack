<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/v_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    app:behavior_hideable="false"
    app:behavior_peekHeight="@dimen/default_dp_5_13"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <TextView
        android:id="@+id/tv_events_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_dp_10_1"
        android:layout_marginStart="@dimen/default_dp_10_1"
        android:layout_marginTop="@dimen/default_dp_10_1"
        android:text="@string/trip_events"
        android:textSize="@dimen/default_sp_4_5"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_tracking"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/default_dp_10_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slideView"
        tools:listitem="@layout/item_event_timeline" />

    <ProgressBar
        android:id="@+id/event_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/rv_tracking"
        app:layout_constraintEnd_toEndOf="@+id/rv_tracking"
        app:layout_constraintStart_toStartOf="@+id/rv_tracking"
        app:layout_constraintTop_toTopOf="@+id/rv_tracking" />

    <ng.max.slideview.SlideView
        android:id="@+id/slideView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/default_dp_10_5"
        android:layout_marginStart="@dimen/default_dp_10_5"
        android:layout_marginTop="@dimen/default_dp_10_3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_events_title"
        app:sv_buttonBackgroundColor="@color/colorPrimaryDark"
        app:sv_buttonImage="@drawable/ic_check"
        app:sv_reverseSlide="false"
        app:sv_slideBackgroundColor="@color/white"
        app:sv_slideText="Punto de Partida"
        app:sv_slideTextColor="@color/colorPrimary"
        app:sv_slideTextSize="@dimen/default_sp_4_4"
        app:sv_strokeColor="@color/colorPrimary" />

</android.support.constraint.ConstraintLayout>